<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.logo_text"), root_path , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home_link"), root_path %></li>
        <li><%= link_to t("header.help_link"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("header.user"), users_path %></li>
            <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t("header.acc") %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
            <li><%= link_to t("header.profile"), current_user %></li>
            <li><%= link_to t("header.set"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("header.logout"), logout_path,
                         data: { "turbo-method": :delete } %>
            </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login_link"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
