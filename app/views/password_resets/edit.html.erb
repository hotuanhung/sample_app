<% provide(:title, t("reset_password.title")) %>
<h1><%= t("reset_password.title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, t("reset_password.password_label") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("reset_password.confirmation_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("reset_password.submit_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
